# MongoDB
MONGODB_URI=mongodb://localhost:27017/cs-store

# JWT
JWT_SECRET=placeholder_jwt_secret_at_least_32_characters_long
JWT_REFRESH_SECRET=placeholder_jwt_refresh_secret_at_least_32_characters_long

# Server
PORT=4000
NODE_ENV=development

# CORS (comma-separated origins)
CORS_ORIGIN=

# Frontend URL
FRONTEND_URL=

# Redis
REDIS_URL=

# Razorpay
RAZORPAY_KEY_ID=rzp_test_
RAZORPAY_KEY_SECRET=placeholder_secret
RAZORPAY_WEBHOOK_SECRET=placeholder_webhook_secret

# Google Maps (for location services)
GOOGLE_MAPS_API_KEY=

# Cloudinary (for image uploads)
CLOUDINARY_CLOUD_NAME=placeholder
CLOUDINARY_API_KEY=placeholder
CLOUDINARY_API_SECRET=placeholder

# OAuth (Optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=

# Public backend URL (used to derive OAuth callback if GOOGLE_CALLBACK_URL not provided)
BACKEND_URL=

# Google OAuth callback URL (recommended for production)
GOOGLE_CALLBACK_URL=

# Email (Optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=

# SMS/OTP - Fast2SMS (Primary)
# Get your API key from: https://www.fast2sms.com/dashboard/dev-api
FAST2SMS_API_KEY=
FAST2SMS_SENDER_ID=

# SMS/OTP - Twilio (Optional Fallback)
# Only used if USE_TWILIO=true AND Fast2SMS fails
USE_TWILIO=
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# SMS Testing (Optional - bypass real SMS in development)
MOCK_SMS=true
