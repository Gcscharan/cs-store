{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",

    "rootDir": "src",
    "outDir": "dist",

    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    "typeRoots": [
      "src/@types",
      "node_modules/@types"
    ],

    "resolveJsonModule": true
  },
  "include": ["src"],
  "exclude": [
    "dist",
    "tests",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}