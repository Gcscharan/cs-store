# CS Store Environment Variables Template
# Copy this file to .env and fill in your actual values

# Database
MONGODB_URI=mongodb://localhost:27017/cps-store

# JWT Secrets
JWT_SECRET=your-jwt-secret-key-here
JWT_REFRESH_SECRET=your-refresh-secret-key-here

# Razorpay Payment Gateway
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret

# Cloudinary Image Storage
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Google OAuth (Optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Facebook OAuth (Optional)
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# Google Maps API (for delivery navigation & routing)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Mapbox API (alternative to Google Maps - Optional)
MAPBOX_API_KEY=your-mapbox-api-key

# Firebase Cloud Messaging (for push notifications to delivery partners - Optional)
FCM_SERVER_KEY=your-fcm-server-key

# Email Service (for delivery partner approval notifications - Optional)
EMAIL_SERVICE_API_KEY=your-email-service-key
EMAIL_FROM=noreply@csstore.com

# Twilio SMS (for OTP and notifications - Optional)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# Sentry Error Tracking (Optional)
SENTRY_DSN=your-sentry-dsn

# Server Configuration
PORT=5001
NODE_ENV=development
FRONTEND_URL=http://localhost:3000